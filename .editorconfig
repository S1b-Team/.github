# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_style = space
indent_size = 4

# C/C++
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Configuration files
[*.{conf,config,ini}]
indent_style = space
indent_size = 2
